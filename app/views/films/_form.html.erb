<div class="field">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>

<div class="field">
  <%= f.label :genre %>
  <%= f.text_field :genre %>
</div>

<div class="field">
  <%= f.label :release_year %>
  <%= f.number_field :release_year %>
</div>

<div class="field">
  <%= f.label :imdb_url %>
  <%= f.text_field :imdb_url %>
</div>

<div class="field">
<form>
    <legend>Producer</legend>
    <select>
    <% @producers.each do |p| %>
      <option><%= p.name %></option>
    <% end %>
    </select><br>
    <br>
  </form>
</div>

<div class="actions">
  <%= f.submit %>
</div>
<% end %>
