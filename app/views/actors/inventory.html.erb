<h1> Inventory </h1>

<table>
  <thead>
    <tr>
      <th> Name </th>
      <th> Homepage </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% @actors = @actors.sort_by{|e| -e[:name]} %> 

  <tbody>
    <% @actors.each do |actor| %>
      <tr>
        <td><%= actor.name %></td>
        <td><%= actor.homepage %></td>
        <td><%= link_to 'Update', edit_actor_path(actor) %></td>
        <td><%= link_to 'Delete', actor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

