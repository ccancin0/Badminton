<h2> Add </h2>
<br>

<%= form_for @actor, url: {action: 'produce'} do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :gender %>
    <%= f.text_field :gender %>
  </div>

  <div class="field">
    <%= f.label :homepage %>
    <%= f.text_field :homepage %>
  </div>

  <div class="field">
    <%= f.label :age %>
    <%= f.number_field :age %>
  </div>

  <div class="actions">
    <%= f.submit "Produce" %>
  </div>
<% end %>