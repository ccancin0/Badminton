<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @talent_agent.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @talent_agent.last_name %>
</p>

<p>
  <strong>Dob:</strong>
  <%= @talent_agent.dob %>
</p>

<p>
  <strong>Pitch:</strong>
  <%= @talent_agent.pitch %>
</p>

<table>
  <thead>
    <tr>
      <th> Name </th>
      <th> Gender </th>
      <th> Homepage </th>
      <th> Age </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @talent_agents.actor.each do |actor| %>
      <tr>
        <td><%= actor.name %></td>
        <td><%= actor.gender %></td>
        <td><%= actor.homepage %></td>
        <td><%= actor.age %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_talent_agent_path(@talent_agent) %> |
<%= link_to 'Back', talent_agents_path %>
